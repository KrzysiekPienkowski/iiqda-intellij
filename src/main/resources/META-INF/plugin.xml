<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <!-- Unique identifier of the plugin. It should be FQN. It cannot be changed between the plugin versions. -->
    <id>com.ventum.plugin.iiqda.iiqda-intellij</id>

    <!-- Public plugin name should be written in Title Case.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-name -->
    <name>IIQDA pluging</name>

    <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
    <vendor email="krzysztof.pienkowski@ventum.com" url="https://www.ventum-consulting.com/">Ventum</vendor>

    <!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
         Simple HTML elements (text formatting, paragraphs, and lists) can be added inside of <![CDATA[ ]]> tag.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-description -->
    <description>Intellij plugin for iiq dsadsdffgdfgdfgdfgfdgggggg</description>

    <!-- Product and plugin compatibility requirements.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <!-- Extension points defined by the plugin.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
    <extensions defaultExtensionNs="com.intellij">
    </extensions>

    <actions>
        <action
                id="com.ventum.iiqdaintellij.action.CompareWithRemote"
                class="com.ventum.iiqdaintellij.DropdownAction"
                text="Compare With Remote"
                description="Compare With Remote">
            <add-to-group group-id="EditorPopupMenu" anchor="after" relative-to-action="EditorPopupMenu2"/>
        </action>
        <action
                id="com.ventum.iiqdaintellij.action.RunTask"
                class="com.ventum.iiqdaintellij.RunTaskAction"
                text="Run Task"
                description="Run Task">
            <add-to-group group-id="EditorPopupMenu" anchor="after" relative-to-action="EditorPopupMenu2"/>
        </action>

        <group
                id="com.ventum.iiqdaintellij.action.DeployArtifact"
                class="com.ventum.iiqdaintellij.DeployArtifactActionGroup"
                text="Deploy Artifact"
                popup="true">
            <add-to-group group-id="EditorPopupMenu" anchor="after" relative-to-action="EditorPopupMenu2"/>
        </group>


        <group
                id="com.ventum.iiqdaintellij.action.CustomDefaultActionGroupProject"
                class="com.ventum.iiqdaintellij.ImportArtifactActionGroup"
                text="Import Artifact"
                popup="true">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="after"
                          relative-to-action="ProjectViewPopupMenuRefactoringGroup"/>
        </group>

    </actions>


</idea-plugin>